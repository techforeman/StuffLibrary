@using Stuff_Library.Infrastructure
@model IEnumerable<Stuff_Library.Models.Category>


<nav class="genres-vertical">
	<ul>
		@foreach (var category in Model)
		{


			<li>
				<a href="@Url.Action("List", "Store", new { categoryname = category.Name.ToString()})" style="background-image: url(@Url.CategoryIconPath(category.IconFilename) ">
					@category.Name
				</a>
			</li>
			}
	</ul>
</nav>